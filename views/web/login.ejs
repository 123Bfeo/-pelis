<%-include('../partials/head')-%>
<main>
  <h1 class="titulo">INICIAR SESSION</h1>

  <form action="/login" method="POST">
    <section class="conte-p-formLogin">
      <article class="login">
        <div class="input-form">
          <label for="correo">
            <input
              class="campo"
              type="email"
              name="correo"
              id="correo"
              placeholder="Example@gmail.com"
              value="<%= locals.oldData ? oldData.correo: null %>"
            />
            <% if(locals.errors && errors.correo) { %>
            <div>
              <p style="color: rgba(165, 42, 42, 0.462)">
                <%=errors.correo.msg%>
              </p>
            </div>
            <% } %>
          </label>

          <label for="pass">
            <input
              class="campo"
              type="password"
              name="password"
              id="pass"
              placeholder=" Password"
            />
            <% if(locals.errors && errors.password) { %>
            <div>
              <p style="color: rgba(165, 42, 42, 0.496)">
                <%=errors.password.msg%>
              </p>
            </div>
            <% } %>
          </label>
        </div>

        <div class="lab-but">
          <label for="recordar"
            >Recordar credenciales
            <input type="checkbox" name="recordarme" />
          </label>
          <button class="but-ingresar" type="submit">Ingresar</button>
        </div>
      </article>
    </section>
  </form>
</main>
<%- include('../partials/footer')-%>
